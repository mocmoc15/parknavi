<%= render "shared/header" %>


<h3>検索ページ</h3>
<h3><%= link_to 'トップページへ戻る', root_path%></h3>
<div class='item-contents' id="detailed-search-result-wrapper">
  <%= search_form_for @q, url: search_parks_path, html: {id: "detailed-search-form"} do |f| %>
    <div class="search-field">
      <%= f.label :name_cont, '公園名' %>
      <br>
      <%= f.text_field :name_cont, placeholder: '公園名',:include_blank => true %>
    </div>
    <div class="search-field">
      <%= f.label :prefecture_id_in, '都道府県' %>
       <br>
      <%= f.collection_select(:prefecture_id_eq, Prefecture.all, :id, :name, :include_blank => true) %>
    </div>
 
    <div class="search-field" >
      <%= f.label :parking_in, '駐車場' %> 
       <br> 
      <%= f.check_box :parking_eq, {},checked_value = "1", unchecked_value = "" %> 
    </div> 
    <div class="search-field" >
      <%= f.label :vending_machine_in, '自動販売機' %> 
       <br> 
      <%= f.check_box :vending_machine_eq, {},checked_value = "1", unchecked_value = "" %> 
