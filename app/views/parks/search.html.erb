       <br> 
      <%= f.check_box :toilet_eq, {},checked_value = "1", unchecked_value = "" %> 
    </div> 
    <div class="search-field" >
      <%= f.label :breastfeeding_room_in, '授乳室' %> 
       <br> 
      <%= f.check_box :breastfeeding_room_eq, {},checked_value = "1", unchecked_value = "" %> 
    </div> 
    <div class="search-field" >
      <%= f.label :diaper_changing_table_in, 'おむつ交換台' %> 
       <br> 
      <%= f.check_box :diaper_changing_table_eq, {},checked_value = "1", unchecked_value = "" %> 
    </div> 
    <div class="search-field" >
      <%= f.label :play_set_in, '遊具' %> 
       <br> 
      <%= f.check_box :play_set_eq, {},checked_value = "1", unchecked_value = "" %> 
